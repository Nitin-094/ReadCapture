<%- include('partials/header.ejs') %>

<div class="container px-3 py-5">
    <h1>Add Note</h1>
    <form action="/add-note/<%= bookId %>" method="post">
        <div class="form-floating mb-3">
            <input type="number" class="form-control" name="pageNumber" placeholder="3" required>
            <label>Page Number</label>
        </div>
        <div class="form-floating mb-3">
            <textarea name="note" class="form-control" placeholder="Leave a note here" style="height: 100px"></textarea>
            <label for="floatingTextarea2">Note</label>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

